{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev: all",
      "detail": "Starts the frontend and backend in development mode",
      "dependsOn": ["dev: backend", "dev: frontend"],
      "problemMatcher": [],
      "icon": {
        "id": "debug",
        "color": "terminal.ansiWhite"
      }
    },
    {
      "label": "lint: all",
      "detail": "Lints the frontend and backend",
      "dependsOn": ["lint: backend", "lint: frontend"],
      "problemMatcher": [],
      "icon": {
        "id": "check",
        "color": "terminal.ansiWhite"
      }
    },
    {
      "label": "deploy: all",
      "detail": "Deploys the frontend and backend to the cloud",
      "dependsOn": ["deploy: backend", "deploy: frontend"],
      "problemMatcher": [],
      "icon": {
        "id": "cloud-upload",
        "color": "terminal.ansiWhite"
      }
    },
    {
      "label": "dev: backend",
      "detail": "Starts the backend in development mode",
      "type": "npm",
      "path": "backend",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "icon": {
        "id": "debug",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "dev: frontend",
      "detail": "Starts the frontend in development mode",
      "type": "npm",
      "path": "frontend",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": ["$vite", "$tsc", "$node-sass"],
      "icon": {
        "id": "debug",
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "dev-inspect: backend",
      "detail": "Starts the backend in development mode with inspector",
      "type": "npm",
      "path": "backend",
      "script": "dev:inspect",
      "isBackground": true,
      "problemMatcher": [{
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation in watch mode...",
          "endsPattern": "It is now safe to connect your app."
        }
      }],
      "icon": {
        "id": "search",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "lint: backend",
      "detail": "Lints the backend",
      "type": "npm",
      "path": "backend",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "icon": {
        "id": "check",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "lint: frontend",
      "detail": "Lints the frontend",
      "type": "npm",
      "path": "frontend",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "icon": {
        "id": "check",
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "deploy: backend",
      "detail": "Deploys the backend to the cloud",
      "type": "npm",
      "path": "backend",
      "script": "deploy",
      "problemMatcher": ["$eslint-stylish"],
      "icon": {
        "id": "cloud-upload",
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "deploy: frontend",
      "detail": "Deploys the frontend to the cloud",
      "type": "npm",
      "path": "frontend",
      "script": "deploy",
      "problemMatcher": ["$eslint-stylish"],
      "icon": {
        "id": "cloud-upload",
        "color": "terminal.ansiGreen"
      }
    }
  ]
}
